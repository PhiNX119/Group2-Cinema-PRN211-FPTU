@model PRN_ASG3.Models.Booking

@{
    ViewData["Title"] = "Delete";
    Boolean[,] roomMap = ViewBag.RoomMap;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <hr />

    <table>
        @for (int i = 0; i < roomMap.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j < roomMap.GetLength(1); j++)
                {
                    <td>
                        <input type="checkbox" @(roomMap[i, j] ? "checked" : "") disabled />
                    </td>
                }
            </tr>
        }
    </table>

    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model?.ShowId">Back to List</a>
    </form>
</div>
